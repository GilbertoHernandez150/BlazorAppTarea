@page "/tabla-multiplicar"

<h1>Tabla de Multiplicar</h1>

<div>
    <label for="numero">Número:</label>
    <input type="number" @bind="numero" />
</div>

<button @onclick="GenerarTabla">Generar Tabla</button>

<ul>
    @foreach (var resultado in tabla)
    {
        <li>@resultado</li>
    }
</ul>

@code {
    private int numero;
    private List<string> tabla = new List<string>();

    private void GenerarTabla()
    {
        tabla.Clear();
        for (int i = 0; i <= 15; i++)
        {
            tabla.Add($"{i} x {numero} = {i * numero}");
        }
    }
}

